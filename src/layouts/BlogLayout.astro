<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body
    class="mt-24 bg-white text-gray-500 dark:bg-gray-800 dark:text-gray-400"
  >
    <Header />
    <main class="m-0 w-[calc(100%-2em)] max-w-full">
      <article class="mb-12">
        <div class="w-full">
          {
            heroImage && (
              <img
                width={1020}
                height={510}
                src={heroImage}
                alt=""
                class="mx-auto block rounded-[12px] shadow-[var(--box-shadow)]"
              />
            )
          }
        </div>
        <div
          class="mx-auto w-[720px] max-w-[calc(100%-2em)] p-4 text-[rgb(var(--gray-dark))]"
        >
          <div class="mb-4 pb-4 pt-4 text-center leading-none">
            <div class="mb-2 text-[rgb(var(--gray))]">
              <FormattedDate date={new Date(pubDate)} />
              {
                updatedDate && (
                  <div class="italic">
                    Last updated on{" "}
                    <FormattedDate date={new Date(updatedDate)} />
                  </div>
                )
              }
            </div>
            <h1
              class="mb-4 text-center text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white"
            >
              {title}
            </h1>
            <hr />
          </div>
          <div class="prose text-gray-500 dark:text-gray-400">
            <slot />
          </div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
