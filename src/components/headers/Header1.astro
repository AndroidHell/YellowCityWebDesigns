---
import Drawer from "./Drawer/Drawer.astro";
import Brand from "../BrandHeader.astro";
import NavbarCta from "./widgets/NavbarCta.astro";
import NavbarThemeToggle from "./widgets/NavbarThemeToggle.astro";
import NavigationLinks from "./widgets/NavigationLinks.astro";
import { Icon } from "astro-icon/components";
import { navigationItems as navItems } from "../../common/navigationItems";
import DrawerCta from "../headers/Drawer/Drawercta.astro";
import DrawerThemeToggle from "../headers/Drawer/DrawerThemeToggle.astro";
---

<!-- <Drawer /> -->
<nav
  class="nav fixed start-0 top-0 z-30 w-full border-gray-200 bg-white dark:border-gray-600 dark:bg-gray-900"
>
  <div
    class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4 pl-4 pr-4"
  >
    <div class="lg:order-1 lg:flex lg:w-auto">
      <Brand />
    </div>

    <!-- nav links -->
    <!-- sets the position of the lave links in the headr to left, center, or right -->
    <!-- <div
      class="ml-4 mr-4 hidden w-full grow items-center justify-start lg:order-2 lg:flex lg:w-auto"
    > -->
    <div
      class="ml-4 mr-4 hidden w-full items-center justify-between lg:order-2 lg:flex lg:w-auto"
    >
      <!-- <div
      class="ml-4 mr-4 hidden w-full grow items-center justify-end lg:order-2 lg:flex lg:w-auto"
    > -->
      <NavigationLinks />
    </div>

    <div class="flex space-x-3 lg:order-3 rtl:space-x-reverse">
      <div class="hidden lg:flex lg:w-auto">
        <NavbarCta />
        <NavbarThemeToggle />
      </div>
      <!-- hamburger button -->
      <button
        type="button"
        class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 lg:hidden"
        aria-expanded="false"
        data-drawer-target="drawer-navigation"
        data-drawer-show="drawer-navigation"
        aria-controls="drawer-navigation"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-5 w-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
  </div>
</nav>

<div
  id="drawer-navigation"
  class="fixed left-0 top-0 z-50 h-screen w-64 -translate-x-full overflow-y-auto bg-white p-4 transition-transform dark:bg-gray-800"
  tabindex="-1"
  aria-labelledby="drawer-navigation-label"
>
  <h5
    id="drawer-navigation-label"
    class="text-base font-semibold uppercase text-gray-500 dark:text-gray-400"
  >
    YCWD
  </h5>
  <button
    type="button"
    data-drawer-hide="drawer-navigation"
    aria-controls="drawer-navigation"
    class="absolute end-2.5 top-2.5 inline-flex h-8 w-8 items-center justify-center rounded-lg bg-transparent text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white"
  >
    <svg
      class="h-3 w-3"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 14"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
    </svg>
    <span class="sr-only">Close menu</span>
  </button>
  <div class="overflow-y-auto py-4">
    <ul class="space-y-2 font-medium">
      <!-- dropdown -->
      {
        navItems.map((item) => (
          <>
            {item.children && (
              <li>
                <button
                  type="button"
                  class="group flex w-full items-center rounded-lg p-2 text-gray-900 transition duration-75 hover:bg-gray-100 hover:text-yellow-300 dark:text-white dark:hover:bg-gray-700"
                  aria-controls="dropdown-drawer"
                  data-collapse-toggle="dropdown-drawer"
                >
                  {/* fix styling */}
                  <Icon
                    name={item.icon}
                    class="h-5 w-5 flex-shrink-0 text-gray-500 transition duration-75  group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white"
                  />
                  <span class="ms-3 flex-1 whitespace-nowrap text-left rtl:text-right">
                    {item.title}
                  </span>
                  <svg
                    class="h-3 w-3"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 10 6"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="m1 1 4 4 4-4"
                    />
                  </svg>
                </button>
                <ul id="dropdown-drawer" class="hidden space-y-2 py-2">
                  {item.children.map((child) => (
                    <li>
                      <a
                        href={child.path}
                        class="group flex w-full items-center rounded-lg p-2 pl-11 text-gray-500 transition duration-75 hover:bg-gray-100 hover:text-yellow-300 dark:text-gray-400 dark:hover:bg-gray-700"
                      >
                        <span>{child.title}</span>
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            )}
            {!item.children && (
              <li>
                <a
                  href={item.path}
                  class="group flex items-center rounded-lg p-2 text-gray-900 hover:bg-gray-100 hover:text-yellow-300 dark:text-white dark:hover:bg-gray-700"
                >
                  <Icon
                    name={item.icon}
                    class="h-5 w-5 flex-shrink-0 text-gray-500 transition duration-75 group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white"
                  />
                  <span class="ms-3 flex-1 whitespace-nowrap">
                    {item.title}
                  </span>
                </a>
              </li>
            )}
          </>
        ))
      }
    </ul>
  </div>

  <hr class="mb-4 h-px border-0 bg-gray-200 dark:bg-gray-700" />
  <DrawerThemeToggle />
  <DrawerCta />
</div>

<script is:inline>
  window.addEventListener("scroll", (e) => {
    const nav = document.querySelector(".nav");
    if (window.scrollY) {
      nav?.classList.add("shadow");
    } else {
      nav?.classList.remove("shadow");
    }
  });
</script>
