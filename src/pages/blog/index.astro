  <div class="my-24 bg-white dark:bg-gray-800">
    <main class="mx-auto w-full max-w-screen-lg px-4">
      <section>
        <ul class="w-full space-y-4">
          {
            posts.map((post) => (
              <li class="w-full">
                <a
                  href={`/blog/${post.slug}/`}
                  class="flex flex-col items-center rounded-lg border border-gray-200 bg-white shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-900 dark:hover:bg-gray-700 md:flex-row"
                >
                  <img
                    class="h-56 w-full rounded-t-lg object-cover md:h-32 md:w-72 md:rounded-none md:rounded-s-lg"
                    src={post.data.heroImage}
                    alt=""
                  />
                  <div class="flex w-full flex-col justify-between p-4 leading-normal">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                      {post.data.title}
                    </h5>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                      {post.data.description}
                    </p>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
  </div>

  {/* render the items from the page */}

  <Footer />
  <script src="../../../node_modules/flowbite/dist/flowbite.min.js"></script>
</body>
