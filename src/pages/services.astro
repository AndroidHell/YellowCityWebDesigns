---
import Container from "../components/Container.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroInner from "../components/HeroInner.astro";
import ClientGallery from "../components/ClientGallery.astro";
import CtaBanner from "../components/CtaBanner.astro";

const title = "Our Portfolio";
const desc = "";
const image = "/hero-inner.webp";
---

<BaseLayout title="Gallery" description="Gallery">
  <HeroInner title={title} desc={desc} image={image} />
  <Container>
    <div class="text prose">
      <span
        class="border-b-2 border-primary-500 uppercase text-gray-500 dark:text-gray-200"
        >Portfolio</span
      >
      <h2
        class="my-4 text-3xl font-bold text-gray-600 dark:text-white sm:text-4xl"
      >
        See what we've <span class="text-primary-500">Created</span>
      </h2>
    </div>
    <ClientGallery />
  </Container>
  <CtaBanner />
</BaseLayout>
