---
import Containter from "../components/Container.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroInner from "../components/HeroInner.astro";
import ContactInfo from "../components/ContactInfo.astro";

const title = "Contact Us";
const desc = "";
const image = "/hero-inner.webp";

// const web3FormsAccessKey = import.meta.env.WEB3FORMS_ACCESS_KEY; //dev
// const web3FormsAccessKey = process.env.WEB3FORMS_ACCESS_KEY; //prod
---

<!-- maybe bring the form out to it's own component -->
<BaseLayout title="Contact Us" description="Contact Us">
  <HeroInner title={title} desc={desc} image={image} />
  <Containter>
    <section
      class="grid grid-cols-1 text-gray-600 dark:text-gray-300 lg:grid-cols-3"
    >
      <div class="my-16 lg:col-span-2">
        <div
          class="mx-auto max-w-screen-md rounded-md border-gray-400 bg-gray-50 px-4 py-8 shadow-xl dark:bg-gray-700 lg:p-8"
        >
          <div class="text prose">
            <span
              class="border-b-2 border-primary-500 uppercase text-gray-500 dark:text-gray-200"
              >Contact</span
            >
            <h2
              class="my-4 text-3xl font-bold text-gray-600 dark:text-white sm:text-4xl"
            >
              Let's <span class="text-primary-500">Talk</span>
            </h2>
            <div class="text-justify text-gray-700 dark:text-gray-200">
              <p>
                Starting a new business? Got a website in mind? Looking to hit
                the top search results on Google? Let us know what you are
                after!
              </p>
            </div>
          </div>
          <form
            name="contact"
            method="POST"
            id="form"
            data-astro-reload
            novalidate
            class="space-y-4"
            data-netlify="true"
          >
            <!-- Add your Web3Forms Access Key -->
            <!-- env goes in root -->
            <!-- <input type="hidden" name="access_key" value={web3FormsAccessKey} /> -->
            <!-- value="YOUR_ACCESS_KEY_HERE" -->
            <!-- 
            <input
              type="checkbox"
              class="hidden"
              style="display:none"
              name="botcheck"
            /> -->
            <div>
              <label
                for="name"
                class="mb-2 block text-lg font-medium text-gray-600 dark:text-gray-300"
                >Your name</label
              >
              <input
                type="text"
                name="name"
                id="name"
                class="block w-full rounded-lg border border-gray-300 bg-white p-4 text-sm text-gray-900 hover:ring-1 hover:ring-primary-300 focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500"
                placeholder="John Smith"
                required
              />
            </div>
            <div>
              <label
                for="email"
                class="mb-2 block text-lg font-medium text-gray-600 dark:text-gray-300"
                >Your email</label
              >
              <input
                type="email"
                name="email"
                id="email"
                class="block w-full rounded-lg border border-gray-300 bg-white p-4 text-sm text-gray-900 hover:ring-1 hover:ring-primary-300 focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500"
                placeholder="john.smith@gmail.com"
                required
              />
            </div>
            <div>
              <label
                for="subject"
                class="mb-2 block text-lg font-medium text-gray-600 dark:text-gray-300"
                >Subject</label
              >
              <input
                type="text"
                name="subject"
                id="subject"
                class="block w-full rounded-lg border border-gray-300 bg-white p-4 text-sm text-gray-900 hover:ring-1 hover:ring-primary-300 focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500"
                placeholder="Let us know how we can help you"
                required
              />
            </div>
            <div class="sm:col-span-2">
              <label
                for="message"
                class="mb-2 block text-lg font-medium text-gray-600 dark:text-gray-300"
                >Your message</label
              >
              <textarea
                id="message"
                name="message"
                rows="6"
                minlength="10"
                class="block w-full rounded-lg border border-gray-300 bg-white p-4 text-sm text-gray-900 hover:ring-1 hover:ring-primary-300 focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-800 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500"
                placeholder="Leave a comment..."
                required></textarea>
            </div>
            <button
              type="submit"
              class="rounded-full bg-primary-500 px-4 py-2 text-center font-bold text-white hover:bg-primary-600 dark:bg-primary-600 dark:hover:bg-primary-500"
              >Send message</button
            >
            <div id="result" class="mt-3 text-center"></div>
          </form>
        </div>
      </div>
      <div class="mt-8 lg:col-span-1">
        <ContactInfo />
      </div>
    </section>
  </Containter>
</BaseLayout>

